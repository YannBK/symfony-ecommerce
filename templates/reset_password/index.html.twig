{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié ?{% endblock %}

{% block content %}
    <div class="block_small">
        {% for message in app.flashes('notice') %}
            <div class="alert alert-info">{{ message }}</div>
        {% endfor %}
        <form method="post">{# TODO action #}
            <h1 class="h3 mb-3 font-weight-normal">Mot de passe oublié ?</h1>
            <label for="inputEmail">Votre email</label>
            <input type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="Votre email" required autofocus>

            <button class="btn btn-lg btn-info btn-block mt-3" type="submit">
                Valider
            </button>
            <hr>
            <p class="text-center">Ou souhaitez-vous <a href="{{ path('app_login') }}">vous connecter</a></p>
        </form>
    </div>
{% endblock %}
