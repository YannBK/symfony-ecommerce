{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block content %}

<div>
    <h1>Mon compte</h1>
    <p>Bienvenue {{app.user.firstname}} dans votre compte !</p>
    <br>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('admin') }}">Administrer la boutique</a>
        <br>
    {% endif %}
    <div class="row">
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/image/password.png') }}" alt="Mon mot de passe">
                <a href="{{ path('app_account_password') }}">Modifier mon mot de passe</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/image/address-book.png') }}" alt="Mes adresses">
                <a href="{{ path('app_account_address') }}">GÃ©rer mes adresses</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/image/purchase.png') }}" alt="Mes commandes">
                <a href="{{ path('app_account_order') }}">Mes commandes</a>
            </div>
        </div>
    </div>
    <br>
    <br>
{% endblock %}
