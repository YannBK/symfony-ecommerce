{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block content %}

<div>
    {% for message in app.flashes('notice') %}
        <div class="alert alert-info">{{ message }}</div>
    {% endfor %}

    <h1>Mon compte</h1>
    <p>Bienvenue {{app.user.firstname}} dans votre compte !</p>

    {% if is_granted('ROLE_ADMIN') %}
        <p><a href="{{ path('admin') }}">Administrer la boutique</a></p>
    {% endif %}
    
    <div class="row">
        <div class="col-md-4">
            <a href="{{ path('app_account_password') }}">
                <div class="account-item text-center">
                    <img src="{{ asset('assets/image/password.png') }}" alt="Mon mot de passe">
                    <p>Modifier mon mot de passe</p>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a href="{{ path('app_account_address') }}">
                <div class="account-item text-center">
                    <img src="{{ asset('assets/image/address-book.png') }}" alt="Mes adresses">
                    <p>GÃ©rer mes adresses</p>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a href="{{ path('app_account_order') }}">
                <div class="account-item text-center">
                    <img src="{{ asset('assets/image/purchase.png') }}" alt="Mes commandes">
                    <p>Mes commandes</p>
                </div>
            </a>
        </div>
    </div>
    <br>
    <br>
{% endblock %}
