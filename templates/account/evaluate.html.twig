{% extends 'base.html.twig' %}

{% block title %}Evaluez ce produit{% endblock %}

{% block content %}
{# {{dump(product)}} #}
    <h1>Evaluer ce produit</h1>
    {# {{ dump(product) }}
    <p>mon produit a comme id : ({{ product.id }}  ) et comme nom {{ product.name }}</p>
    <p>mon nom est ... !!! {{ app.user.firstname }}</p> #}

    <div class="row product_container">
        <div class="col-md-3">
            <img src="/uploads/{{product.illustration}}" alt="{{product.subtitle}}" class="img-fluid">
        </div>
        <div class="d-flex flex-column col-md-4 align-items-center justify-content-between pt-5 pb-5">
            <h5>{{product.name}}</h5>
            <span class="product_subtitle">{{product.subtitle}}</span>
        </div>
        <div class="d-flex flex-column col-md-5 align-items-center justify-content-between pt-5 pb-5">
            <h5>Donner une note</h5>
            <span class="product_subtitle">{{product.subtitle}}</span>
        </div>
    </div>

    <div class="row d-flex flex-column">
        {% if existingComment is null %}
            <div>
                <h5>Laissez un commentaire !</h5></br>
            </div>
            <div>
                {{ form(commentForm) }}
            </div>
        {% else %}
            <div>
                <h5>Votre commentaire :</h5></br>
            </div>
            <div class="card p-3 mt-2">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="user d-flex flex-row align-items-center">
                        <span>
                            <small class="font-weight-bold">{{ existingComment.text }}</small>
                        </span>  
                        <small class="ml-3 days">{{ existingComment.days }}</small>
                    </div>
                    <div class="d-flex flex-column">
                        <a href="{{ path('app_account_update_comment', {
                                id : product.id, 
                                update : 'true'}) }}" 
                            class="btn btn-warning m-1">
                        Modifier le commentaire
                        </a>
                        <a href="{{ path('app_comment_delete', {
                                commentId : existingComment.id,
                                productId : product.id }) }}" 
                            class="btn btn-danger m-1">
                        Supprimer le commentaire
                        </a>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
    <div class="row d-flex flex-column">
        {% if update is same as('true') %}
            <div>
                <h5>Mofifiez votre commentaire </h5></br>
            </div>
            <div>
                {{ form(commentForm) }}
            </div>
        {% endif %}
    </div>
{% endblock %}
